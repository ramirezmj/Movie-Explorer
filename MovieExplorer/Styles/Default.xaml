<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- List View -->
    <Style TargetType="ListView">
        <Setter Property="ScrollViewer.VerticalScrollMode" Value="Enabled" />
    </Style>

    <Style x:Key="lvhGrid"  TargetType="Grid">
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style x:Key="lvhText" TargetType="TextBlock">
        
    </Style>

    <Style x:Key="lvhBox" TargetType="TextBox">
        <Setter Property="Margin" Value="0,0,5,0" />
    </Style>

    <Style x:Key="lvhButton" TargetType="Button">
    </Style>

    <Style x:Key="lviMainGrid"  TargetType="Grid">
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style x:Key="lviImage"  TargetType="Image">
		<Setter Property="Width" Value="100" />
		<Setter Property="Stretch" Value="Uniform" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <Style x:Key="lviTitleVB" TargetType="Viewbox">
		<Setter Property="Stretch" Value="Uniform" />
		<Setter Property="MaxHeight" Value="40" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style x:Key="lvfGrid"  TargetType="Grid">
        <Setter Property="Margin" Value="5" />
    </Style>
    <!-- End list View -->
</ResourceDictionary>
